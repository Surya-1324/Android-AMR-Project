<!-- themes.xml -->
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.MyTealApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary color -->
        <item name="colorPrimary">@color/teal_900</item>
        <item name="colorPrimaryVariant">@color/teal_900</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="android:statusBarColor">@color/black</item>
        <!-- Secondary color -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorOnSecondary">#FFFFFF</item>

        <!-- Background -->
        <item name="android:windowBackground">@color/white</item>
        <item name="statusBarBackground">@color/black</item>

    </style>
    <!-- Base application theme. -->
    <style name="Base.Theme.MyTealApp" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:statusBarColor">@color/black</item>
    </style>
</resources>
